<!DOCTYPE html>
<html lang="en">
<head>
  <title>Login</title>
  <%- include('common_head.ejs') %>
</head>
<body class="login-body">
    <!-- <div id="myDiv" style="display:none;">
        <img id="ajaxloader" src="img/ajax-loader.gif">
    </div> -->
    <div id="myDiv" style="display:none;">
      <div class="loader"></div>
    </div>
    <%- include('common_header.ejs') %>
  <main>
    <div class="container">
      <div class="row">
        <div class="col-lg-6 offset-lg-3 col-sm-8 offset-sm-2">
          <div class="login-signup-box">
            <h1 class="page-title" id="loginttl">Login</h1>
            <div class="white-box">
              <div class="alert alert-success" style="display: none;">
                <label class="mb-0" id="success-message"></label>
              </div>
              <div class="alert alert-danger"  style="display: none;">
                <label class="mb-0" id="error-message"></label>
              </div>
              <form action="" method="POST" id="login-form">
                <div class="form-group">
                  <label id="emailttl">Email:</label>
                  <input type="email" class="form-control" placeholder="" name="email" id="email" >
                </div>
                <div class="form-group">
                  <label id="passwordttl">Password:</label>
                  <input type="password" class="form-control" placeholder="" minlength="8" name="password" id="pwd" >
                </div>
                <!-- <a href="index.html" class="btn btn-theme btn-block">Login</a> -->
                <button class="btn btn-theme btn-block" id="loginbtn">Login</button>
              </form>
            </div>
            <a href="/forgot-password" class="text-link mt-3 d-block" id="frgttl">Forgot password</a>
          </div>
        </div>
      </div>
    </div>
  </main>
<script src="js/jquery.min.js"></script>
<script src="js/popper.min.js"></script>
<script src="js/bootstrap.min.js"></script>
<script src="js/frontconstant.min.js"></script>
<script src="js/valid.js"></script>
<script src="js/jquery.validate.min.js"></script>
<script src="js/login.js"></script>
</body>
</html>
